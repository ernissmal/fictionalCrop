{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "astro",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"]
    },
    "types": ["astro/client"],
    "verbatimModuleSyntax": true
  },
  "include": [".astro/types.d.ts", "src/**/*"],
  "exclude": ["node_modules", "dist"]
}
